<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <script src="https://cdn.jsdelivr.net/npm/xss/dist/xss.min.js"></script>
    <script src="../public/js/validations.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            validate_phone("phone");
            validate_cpf("cpf");

            document.getElementById("formcad").addEventListener("submit", function (event) {
                event.preventDefault();

                const email = document.getElementById("email").value;
                const name = document.getElementById("name").value;
                const password = document.getElementById("password").value;
                const phone = document.getElementById("phone").value;
                const cpf = document.getElementById("cpf").value;

                const isEmailValid = validate_email("email", "formcad");
                console.log("Email valid:", isEmailValid);
                const isNameValid = validate_name("name", "formcad");
                console.log("Name valid:", isNameValid);
                const isPasswordValid = validate_password("password", "formcad");
                console.log("Password valid:", isPasswordValid);

                if (isEmailValid && isNameValid && isPasswordValid) {

                    const emailSanitized = filterXSS(email);
                    const nameSanitized = filterXSS(name);
                    const passSanitized = filterXSS(password);
                    const phoneSanitized = filterXSS(phone);
                    const cpfSanitized = filterXSS(cpf);

                    const formData = {
                        email: emailSanitized,
                        name: nameSanitized,
                        password: passSanitized,
                        phone: phoneSanitized,
                        cpf: cpfSanitized
                    };

                    fetch("/cad-fim", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(formData)
                    })  
                        .then(response => {
                            if (response.ok) {
                                alert("Cadastro realizado com sucesso");
                                document.getElementById("formcad").reset();
                            } else {
                                alert("Senha ou email inválidos.");
                            }
                        })
                } else {
                    alert("Por favor corrija os campos incorretos");
                }
            });
        });
    </script>
    <link href="../public/css/styles.css", rel="stylesheet">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./../public/css/Cadastro.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet' type="text/css">
    <title>Cadastro</title>
</head>

<body class="bg-gray-100">    
        <!-- Barra superior -->
        <header class="bg-white shadow">
            <div class="container mx-auto px-6 py-4 flex justify-between items-center">
                <div class="text-6xl text-orange-500 font-bold mb-4">Pizzaria</div>
                <div class="flex space-x-4">
                    <button class="bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600">Cadastre-se</button>
                    <button class="bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500">Entrar</button>
                </div>
            </div>
        </header>
    <!-- Formulário de cadastro -->
    <main class="container mx-auto px-6 py-10">
        <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
            <form id="formcad">
                <div class="flex justify-center mb-6">
                    <i class='bx bxs-pizza text-orange-500 text-5xl' id="icone"></i>
                </div>

                <div class="mb-4">
                    <div class="relative">
                        <input type="email" id="email" name="email" placeholder="Digite seu E-mail" required
                            class="w-full px-4 py-2 text-gray-700 bg-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <i class='bx bx-envelope absolute top-3 right-3 text-gray-500'></i>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="relative">
                        <input type="text" id="name" name="name" placeholder="Digite seu nome" required
                            class="w-full px-4 py-2 text-gray-700 bg-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <i class='bx bxs-user absolute top-3 right-3 text-gray-500'></i>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="relative">
                        <input type="password" id="password" name="pass" placeholder="Digite sua senha" required
                            class="w-full px-4 py-2 text-gray-700 bg-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <i class='bx bxs-lock-alt absolute top-3 right-3 text-gray-500'></i>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="relative">
                        <input type="text" id="phone" name="phone" placeholder="Digite seu fone" required
                            class="w-full px-4 py-2 text-gray-700 bg-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <i class='bx bxs-phone absolute top-3 right-3 text-gray-500'></i>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="relative">
                        <input type="text" id="cpf" name="cpf" placeholder="Digite seu CPF" required
                            class="w-full px-4 py-2 text-gray-700 bg-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <i class='bx bxs-id-card absolute top-3 right-3 text-gray-500'></i>
                    </div>
                </div>

                <button type="submit" id="enviar" class="w-full bg-orange-500 text-white py-2 rounded-lg hover:bg-orange-600 transition duration-300">
                    Cadastrar
                </button>
            </form>
        </div>
    </main>
</body>

</html>